<%= form_for(@phone) do |f| %>
  <% if @phone.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{@phone.errors.count} #{t('message.error')} #{t('message.error_msg')}:" %></h2>

      <ul>
      <% @phone.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :contact_id %>
    <%= f.collection_select(:contact_id, @contact_options_for_select, :id, :name) %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  
  <div class="actions">
    <%= f.submit t('buttons.save'), class: 'button' %>&nbsp;&nbsp;&nbsp;
    <%= link_to t('buttons.back'), phones_path, class: 'button' %>
  </div>
<% end %>
