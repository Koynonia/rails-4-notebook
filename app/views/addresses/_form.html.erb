<%= form_for(@address) do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{@address.errors.count} #{t('message.error')} #{t('message.error_msg')}:" %></h2>

      <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :contact_id %>
    <%= f.collection_select(:contact_id, @contact_options_for_select, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  
  <div class="actions">
    <%= f.submit t('buttons.save'), class: 'button' %>&nbsp;&nbsp;&nbsp;
    <%= link_to t('buttons.back'), addresses_path, class: 'button' %>
  </div>
<% end %>
